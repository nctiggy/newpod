<%- model_class = Podhost -%>
<div class="page-header">
  <h1><%=t '.title', :default => Podhost %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:host_name) %></dt>
      <dd><pre class="prettyprint"><%= @podhost.host_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wwn_a) %></dt>
      <dd><pre class="prettyprint"><%= @podhost.wwn_a %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wwn_b) %></dt>
      <dd><pre class="prettyprint"><%= @podhost.wwn_b %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              podhosts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_podhost_path(@podhost), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              podhost_path(@podhost),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

